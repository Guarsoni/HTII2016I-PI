@model guilhermeguarsoni.Models.Genero

@{
    ViewBag.Title = "Excluir Gênero";
}

<h2>@ViewBag.Title</h2>

<h3>Tem certeza que deseja excluir gêreno "@Html.DisplayFor(model => model.Descrição)"?</h3>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger"/>
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>

